<div class="login-div "style="margin-top : 150px;">
<h2>Se connecter</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "form-control" } %><br>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "form-control" } %><br>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %><br>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Se connecter", class: "btn btn-sm6 btn-danger", style:"color:white" %>
  </div><br>
<% end %>

<%= render "devise/shared/links" %>
</div>
